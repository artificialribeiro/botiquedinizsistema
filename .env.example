# ============================================
# BOUTIQUE DINIZ API - CONFIGURAÇÕES
# Desenvolvido por Estúdio Atlas
# ============================================

# Ambiente (development | production)
NODE_ENV=production

# Servidor
PORT=3000
HOST=0.0.0.0

# Segurança - API
API_KEY=1526
TOKEN_EXPIRATION_SECONDS=900
TOKEN_SECRET=sua_chave_secreta_muito_forte_aqui_minimo_32_caracteres

# Criptografia de dados sensíveis (AES-256-GCM)
ENCRYPTION_KEY=chave_de_32_caracteres_exatos_!!

# Banco de dados (caminhos relativos à raiz do projeto)
DB_CORE_PATH=./data/core.db
DB_AUTH_PATH=./data/auth.db
DB_AUDIT_PATH=./data/audit.db

# Uploads
UPLOAD_MAX_SIZE_MB=10
UPLOAD_PATH=./data/uploads

# Backup
# BACKUP_RETENTION_DAYS: dias de retenção (backups mais antigos são excluídos automaticamente)
# BACKUP_CRON_SCHEDULE: "0 3 */4 * *" = a cada 4 dias, às 03h00
BACKUP_PATH=./data/backups
BACKUP_RETENTION_DAYS=7
BACKUP_CRON_SCHEDULE=0 3 */4 * *

# E-mail (para recuperação de senha)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_de_app
EMAIL_FROM=Boutique Diniz <noreply@boutiquediniz.com>

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL=info
LOG_PATH=./logs

# URL Base da API (para documentação)
API_BASE_URL=https://api.boutiquediniz.com

# Google Apps Script URL para envio de emails
# O sistema utiliza esta URL como destino padrão para o serviço de
# notificações (cadastro, recuperação de senha, pedidos, etc.).
GOOGLE_APPS_SCRIPT_URL=https://script.google.com/macros/s/AKfycbzZUPie9IgAcFcQd2qzjZYFdPNXuWnyToAtHe1y4Zfp8jA9sMqifG9WGc19qXurZy5Cew/exec
